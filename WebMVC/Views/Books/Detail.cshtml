                @{
                    foreach (var genre in Model.Genres)
                    {
                        <li>@genre</li>
                    }
                }
            </ul>
        </div>


        <div>
            <b>Publisher:</b> @Model.Publisher
        </div>

        <div>
            <b>ISBN:</b> @Model.Isbn
        </div>

        <div>
            <b>Description:</b>
            <p>
                @Model.Description
            </p>
        </div>
    </div>

