        <div>
            <b>Authors:</b>
            <ul>
                @{
                    foreach (var author in Model.Authors)
                    {
                        <li>@author</li>
                    }
                }
            </ul>
        </div>

        <div>
            <b>Primary Genre:</b> @Model.PrimaryGenre
        </div>

        <div>
            <b>Genres:</b>
